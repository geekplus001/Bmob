<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Bmob云服务测试" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加数据"
        android:id="@+id/button_add"
        android:onClick="addClick"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据"
        android:onClick="delClick"
        android:id="@+id/button_del"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_add"
        android:layout_alignEnd="@+id/button_add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改数据"
        android:onClick="updateClick"
        android:id="@+id/button_update"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_del"
        android:layout_alignEnd="@+id/button_del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询数据"
        android:onClick="queryClick"
        android:id="@+id/button_query"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_update"
        android:layout_alignEnd="@+id/button_update" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_icon"
        android:layout_below="@+id/button_query"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
